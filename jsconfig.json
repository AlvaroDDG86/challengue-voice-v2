{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "./*"]
    },
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false
  },
  "exclude": ["node_modules", "dist"]
}
